<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="TabberBorderStyle0" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource Background0}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Border1}"/>
        <Setter Property="BorderThickness" Value="{DynamicResource BorderThicknessDefault}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource CornerRadius}"/>
    </Style>

    <Style x:Key="TabberBorderStyle1" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource Background1}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Border1}"/>
        <Setter Property="BorderThickness" Value="{DynamicResource BorderThicknessDefault}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource CornerRadius}"/>
    </Style>
    
    <Style x:Key="TabberBorderStyle2" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource Background2}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Border2}"/>
        <Setter Property="BorderThickness" Value="{DynamicResource BorderThicknessDefault}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource CornerRadius}"/>
    </Style>
    
</ResourceDictionary>